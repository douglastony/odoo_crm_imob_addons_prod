<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Categoria própria para organizar os grupos -->
    <record id="module_category_sales_unit" model="ir.module.category">
        <field name="name">CRM Sales Unit</field>
        <field name="sequence">20</field>
        <field name="visible" eval="1"/>
    </record>

    <!-- Grupos vinculados à categoria -->
    <record id="group_coordinator" model="res.groups">
        <field name="name">Coordenador</field>
        <field name="category_id" ref="crm_sales_unit.module_category_sales_unit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Gerente</field>
        <field name="category_id" ref="crm_sales_unit.module_category_sales_unit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_director" model="res.groups">
        <field name="name">Diretor</field>
        <field name="category_id" ref="crm_sales_unit.module_category_sales_unit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_president" model="res.groups">
        <field name="name">Sócio</field>
        <field name="category_id" ref="crm_sales_unit.module_category_sales_unit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>