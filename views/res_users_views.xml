<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_inherit_sales_unit" model="ir.ui.view">
        <field name="name">res.users.form.inherit.sales.unit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <!-- Insere logo apÃ³s o campo login -->
            <xpath expr="//field[@name='login']" position="after">
                <group string="CRM Sales Unit">
                    <field name="sales_unit_id"
                           domain="[('id', 'child_of', uid)]"
                           context="{}"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
