<odoo>
    <!-- Ação para abrir a tela de configurações -->
    <record id="action_res_config_sales_unit" model="ir.actions.act_window">
        <field name="name">Configurações</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- View para mostrar apenas nossos campos -->
    <record id="view_res_config_settings_sales_unit" model="ir.ui.view">
        <field name="name">res.config.settings.sales.unit</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Configurações de Vendas">
                <sheet>
                    <group string="Expediente">
                        <field name="default_hora_inicio"/>
                        <field name="default_hora_fim"/>
                    </group>
                    <group string="Leads">
                        <field name="default_lead_cooldown"/>
                        <field name="default_lead_sla"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu principal ao lado de "Unidades de Vendas" -->
    <menuitem id="menu_sales_unit_root"
            name="Configurações de Leads"
            parent=""
            sequence="20"/>


    <!-- Submenu que abre a tela -->
    <menuitem id="menu_sales_unit_config"
            name="Parâmetros"
            parent="crm_sales_unit.menu_sales_unit_root"
            action="action_res_config_sales_unit"
            sequence="10"/>

</odoo>
