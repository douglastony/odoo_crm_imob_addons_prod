<odoo>
  <data>
    <record id="view_crm_opportunity_quick_create_wizard_form" model="ir.ui.view">
      <field name="name">crm.opportunity.quick.create.wizard.form</field>
      <field name="model">crm.opportunity.quick.create.wizard</field>
      <field name="arch" type="xml">
        <form string="Criação Rápida de Oportunidade">
          <sheet>
            <group>
              <field name="name" required="1" placeholder="Nome completo do cliente"/>
              <field name="phone" required="1" placeholder="(XX) XXXXX-XXXX"/>
            </group>
          </sheet>
          <footer>
            <button name="action_create_opportunity" type="object" string="Criar Oportunidade" class="btn-primary" data-hotkey="q"/>
            <button string="Cancelar" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>
