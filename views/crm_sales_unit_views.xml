<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_crm_sales_unit_tree" model="ir.ui.view">
        <field name="name">crm.sales.unit.list</field>
        <field name="model">crm.sales.unit</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="parent_id"/>
                <field name="responsible_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_crm_sales_unit_form" model="ir.ui.view">
        <field name="name">crm.sales.unit.form</field>
        <field name="model">crm.sales.unit</field>
        <field name="arch" type="xml">
            <form string="Unidade de Vendas">
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="name"/>
                    </group>

                    <notebook>
                        <page string="Membros">
                            <field name="member_ids" widget="many2many_tags" string="Membros (Corretores)"/>
                        </page>
                        <page string="Subunidades">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_crm_sales_unit" model="ir.actions.act_window">
        <field name="name">Unidades de Vendas</field>
        <field name="res_model">crm.sales.unit</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_crm_sales_unit"
              name="Unidades de Vendas"
              parent="crm.crm_menu_root"
              action="action_crm_sales_unit"
              groups="base.group_system,base.group_user"/>

</odoo>
